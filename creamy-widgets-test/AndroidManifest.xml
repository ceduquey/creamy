    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/creamTheme" >
        <activity
            android:name="com.taxigol.creamywidgets.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.taxigol.creamywidgets.ButtonsActivity"
            android:label="@string/title_activity_buttons" >
        </activity>
        <activity
            android:name="com.taxigol.creamywidgets.HeadingsActivity"
            android:label="@string/title_activity_headings" >
        </activity>
        <activity
            android:name="com.taxigol.creamywidgets.HeroUnitActivity"
            android:label="@string/title_activity_hero_unit" >
        </activity>
    </application>

</manifest>